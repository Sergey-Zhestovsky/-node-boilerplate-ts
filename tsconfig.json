{
    "compileOnSave": true,
    "compilerOptions": {
        "incremental": true,
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "allowJs": true,
        "baseUrl": "./",
        "checkJs": false,
        "declaration": false,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false, // true
        "moduleResolution": "node",
        "types": [
            "jest"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git",
        ".idea",
        ".DS_Store"
    ],
    "include": [
        "src/**/*"
    ],
    "files": [
        "src/types/index.d.ts",
        "src/types/some.d.ts"
    ],
}