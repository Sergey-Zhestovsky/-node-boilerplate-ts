{
    "compileOnSave": true,
    "compilerOptions": {
        "incremental": true,
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "ES2021"
        ],
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "checkJs": false,
        "declaration": false,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "types": [
            "jest"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
        "files": true
    }
}